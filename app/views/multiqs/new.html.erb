
<H1>
  Survey Builder
</H1>
<hr class="bold">
<ol class="survey-builder">
  <li class="">
    <span>Build Survey</span>
  </li>
    <span class="bar">|</span>
  <li class="">
    <span class="page-inactive">Add Questions</span>
  </li>
</ol>
<p>
  Next, fill in the questions.
</p>
<div class="q-box-wrapper">
  <label class="big-fields-labels">
    Title:
  </label>
  <p>
    <%= @survey.title %>
  </p>

  <label class="big-fields-labels">
    Description:
  </label>
  <p>
    <%= @survey.description %>
  </p>
</div>

<hr class="bold">
<H3>
  Add a multiple Choice of Question:
</H3>
<hr class="bold">
<ol class="survey-builder">
  <li class="">
    <span>Select Options</span>
  </li>
    <span class="bar">|</span>
  <li class="">
    <span class="page-inactive">Add Question Text</span>
  </li>
</ol>

<div class = "q-box-wrapper">
  <%= form_for(@multiq, :url => { :controller => "multiqs", :action => "create" }) do |f| %>
    <div class="form-group">
      <p class="response">How many options should the question have?</p>
      <%= select_tag :no_options, options_for_select([1,2,3,4,5,6,7]), :class => "form-control" %>

      <p class="response">How many options can be selected?</p>
        <%= f.radio_button(:multiple, false) %>
        <%= label :multiple, "Just One" %><br>
        <%= f.radio_button(:multiple, true) %>
        <%= label :multiple, "Multiple" %>
        <%= f.hidden_field :survey_id, :value => @survey.id %>
        <%= f.hidden_field :question, :value => "" %>

      <p class="response">Is the question required?</p>
      <%= f.radio_button(:required, true) %>
      <%= label :required, "Yes" %><br>
      <%= f.radio_button(:required, false) %>
      <%= label :required, "No" %><br>

    </div>
    <div class="big-button-wrapper">
      <%= f.submit "Add a New Question", class: "btn btn-primary btn-group btn-group-lg" %>
    </div>
  <% end %>
</div>

<hr class="bold">

<div class="q-box-wrapper">
  <p class="big-fields-labels">
    Existing Questions:
  </p>
  <% if @multiq.present? && @multiq.id != nil %>
    <% @multiq.each do |m| %>
      <%= m.id %>
      <%= m.survey_id %>
      <%= m.question %>
    <% end %>
  <% else %>
    There are no questions yet!
  <% end %>
</div>

